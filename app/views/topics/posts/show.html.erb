<div class="row">
  <div class="col-md-8">
    <%= link_to "Back to Posts", topic_path(@topic), class: 'btn btn-success btn-sm' %>
    <%= render partial: 'votes/voter', locals: { topic: @topic, post: @post } %>
    <h1><%= markdown @post.title %></h1>
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small><br/><br/>
    <%= image_tag(@post.image.url) if @post.image? %>
    <p><%= markdown @post.body %></p>

    <%= render partial: 'comments/form', locals: { topic: @topic, post: @post, comment: @comment } if current_user %>
    <hr />
    <%= @post.comments.count > 0 ? (render partial: 'comments/comment', collection: @comments) : "There are no comments to display."%>   
  </div>

  <div class="col-md-4">
    <br />
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@post).destroy? %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', confirm: 'Are you sure you want to delete this post?' %>
    <% end %>

    <div> 
      <h3><%= pluralize(@post.points, 'point') %></h3>
      <small>
        <%= pluralize(@post.up_votes, 'up vote') %>
        <%= pluralize(@post.down_votes, 'down vote') %>
      </small>
    </div>
    <%= render partial: 'favorites/favorite', locals: { topic: @topic, post: @post } %>
  </div>
  
</div>
